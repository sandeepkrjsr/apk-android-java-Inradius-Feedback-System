<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bleedcode.inradius">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/img_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Main.Activity_Splash" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main.Activity_Login"/>
        <activity android:name=".Main.Activity_Register"/>
        <activity android:name=".Main.Activity_Dashboard"/>

        <activity android:name=".General.Activity_Info"/>
        <activity android:name=".Manager.Recycler_Manager"/>
        <activity android:name=".Discussion.Activity_Discussion_Open"/>

        <activity android:name=".General.Dialog_Topic"
            android:theme="@style/Theme.AppCompat.Light.Dialog.MinWidth"/>
        <activity android:name=".General.Dialog_Review"
            android:theme="@style/Theme.AppCompat.Light.Dialog.MinWidth"/>
        <activity android:name=".Discussion.Dialog_Create"
            android:theme="@style/Theme.AppCompat.Light.Dialog.MinWidth"/>
        <activity android:name=".Discussion.Dialog_Reply"
            android:theme="@style/Theme.AppCompat.Light.Dialog.MinWidth"/>
        <activity android:name=".Manager.Dialog_Feedback"
            android:theme="@style/Theme.AppCompat.Light.Dialog.MinWidth"/>

    </application>

</manifest>