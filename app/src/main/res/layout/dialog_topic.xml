<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/white">

    <EditText
        android:visibility="visible"
        android:id="@+id/input_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Topic"
        android:textStyle="bold"
        android:inputType="textCapWords"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    <EditText
        android:visibility="visible"
        android:id="@+id/input_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Short Description"
        android:inputType="textCapSentences"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/measures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/input_measure1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Measure 1"
            android:inputType="textCapWords"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <EditText
            android:id="@+id/input_measure2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Measure 2"
            android:inputType="textCapWords"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <EditText
            android:id="@+id/input_measure3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Measure 3"
            android:inputType="textCapWords"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <EditText
            android:id="@+id/input_measure4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Measure 4"
            android:inputType="textCapWords"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <EditText
            android:id="@+id/input_measure5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Measure 5"
            android:inputType="textCapWords"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/next"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/colorAccent"
            android:background="@color/white"
            android:onClick="Next"/>
        <Button
            android:id="@+id/submit"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/colorAccent"
            android:background="@color/white"
            android:onClick="Submit"/>
    </LinearLayout>
</LinearLayout>