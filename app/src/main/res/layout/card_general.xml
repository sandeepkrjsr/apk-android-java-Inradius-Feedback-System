<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="129dp">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/img_manager"
                    android:padding="20dp"
                    android:id="@+id/image" />
                <TextView
                    android:id="@+id/topicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/topicDesc"
                    android:layout_alignStart="@+id/topicDesc"
                    android:layout_alignTop="@+id/image"
                    android:layout_marginTop="30dp"
                    android:text="Manager Feedback"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/topicDesc"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topicName"
                    android:layout_marginEnd="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="4dp"
                    android:layout_toLeftOf="@+id/image"
                    android:layout_toStartOf="@+id/image"
                    android:text="Share your feelings about your manager"
                    android:textSize="10dp" />
            </RelativeLayout>
